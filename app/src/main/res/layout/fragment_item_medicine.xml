<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_medicine_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Medicine Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_medicine_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/iv_medicine_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_error_24"
            android:visibility="gone"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_add_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:padding="8dp"
            android:backgroundTint="@color/purple_500"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignTop="@id/btn_add_prescription"
            android:layout_alignBottom="@id/btn_add_prescription"
            android:layout_toEndOf="@id/btn_add_prescription"
            android:src="@drawable/baseline_arrow_drop_down_circle_24"
            android:padding="8dp"
            android:contentDescription="More"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
